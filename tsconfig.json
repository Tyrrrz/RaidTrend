{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext",
      // HACK: remove line below when @types/node adds support for native fetch in Node 18
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true,
    "pretty": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}